<div id='project'>
<% title(@project.name, "Projects") %>
<h2><%= @project.name %></h2>
</div>



<ul id='tickets'>
	<% @project.tickets.each do |ticket| %>
	<li>
		#<%= ticket.id %> -
		<%= link_to ticket.title, [@project, ticket] %>
	</li>
	<% end %>
</ul>

<%= link_to "New Ticket", new_project_ticket_path(@project) %><br/>





<ul>
<li><%= link_to "Edit Project", edit_project_path(@project) %></li>

<li><%= link_to "Delete Project",
project_path(@project),
method: :delete,
data: { confirm:
	"Are you sure you want to delete this project?"
} %></li>
<li><%= link_to 'Home', projects_path %><br/></li>
</ul>