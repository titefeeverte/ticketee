<div id='ticket'>
	<h2><%= @ticket.title %></h2>
	<p>description: <%= simple_format(@ticket.description) %></p>
	<p id="author">
   Created by <%= @ticket.author.email %>, <%= time_ago_in_words(@ticket.created_at) %> ago
</p>
</div>


  <ul>
	<li><%= link_to 'Edit Ticket', [:edit, @project, @ticket] %></li>
	<li><%= link_to 'Delete Ticket', [@project, @ticket], method: :delete,
		data: {
			confirm: 'Are you sure you want to delete this ticket?'
		} 
		%></li>
	</ul>
