<!DOCTYPE html>
<html>
<head>
<%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
<%= javascript_include_tag "application", "data-turbolinks-track" => true %>
<%= csrf_meta_tags %>
   <!--[if lt IE 9]>
    <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
    </script>
    <![endif]-->

<!--Reference from Show's template-->
  <title><%= @title || "Get Ticketee" %></title>

  <title>
    <% if content_for?(:title) %>
    <%= yield(:title) %>
    <% else %>
    Get your Ticketee !
    <% end %>
  </title>
  </head>
  <body>
    <!--include an navigation-->
    <header class="navbar navbar-fixed-top navbar-inverse">
      <% if false %> <%= render :partial => 'shared/navbar' %> <% end%>
    </header>
<div>
      <%= render :partial => 'shared/signup' %>
</div>

 <nav >
      <span>
    <%= link_to "Ticketee Accueil", root_path, class: "navbar-brand" %>
  </span>
      
    

     <ul class="nav navbar-nav">
      <% if user_signed_in? %>
         <li class="navbar-text">
           Signed in as <%= current_user.email %>
         </li>
         <li class="<%= "active" if current_page?("/") %>">
              <%= link_to "Home", root_path %>
        </li> 
       <li><%= link_to 'Projects Menu', projects_path %></li>

       <% else %>
      <li class="<%= "active" if current_page?("/users/sign_up") %>">
        <%= link_to "Sign up", new_user_registration_path %>
      </li>
     
      <li class="<%= "active" if current_page?("/users/sign_in") %>">
        <%= link_to "Sign in", new_user_session_path %>
      </li>
    <% end %>
  
    </ul>

  </nav>


    <div class="container">

        <%= yield %>

        <!-- Flash Message place-->
        <% flash.each do |key, value| %>
        <div class='flash' id='<%= key %>'>
          <%= value %>
        </div> 
        <% end %>
        <!--Flash end -->


      </div>

  <footer class="site-footer" >Spade Christelle janvier 2015</footer>
  </body>
  </html>